<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emredogan.pickers.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time You Picked"
        android:id="@+id/timeTextView_id"
        android:layout_margin="16dp"

        />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeButton_id"
        android:layout_below="@id/timeTextView_id"
        android:layout_centerHorizontal="true"
        android:text="Pick Time"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date You Picked"
        android:id="@+id/dateTextView_id"
        android:layout_below="@id/timeButton_id"
        android:layout_margin="16dp"

        />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateButton_id"
        android:layout_below="@id/dateTextView_id"
        android:layout_centerHorizontal="true"
        android:text="Pick Date"/>

</RelativeLayout>
